{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2019",
    "lib": ["ES2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["mocha", "node"],
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,

    "paths": {
      "@dappnode/dappnodesdk/*": [
        "../../../node_modules/@dappnode/dappnodesdk/dist/*"
      ]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true
  },
  "resolve": {
    "extensions": [".js", ".json", ".ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
