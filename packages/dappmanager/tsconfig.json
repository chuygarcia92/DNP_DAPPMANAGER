{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es6", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    // TODO: Fix in a latter PR, too many changes for now
    "useUnknownInCatchVariables": false,
    "types": ["mocha", "node"],
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
